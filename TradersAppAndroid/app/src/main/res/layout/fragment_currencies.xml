<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Fragments.CurrenciesFragment">

    <TextView
            android:id="@+id/selectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="16dp"
            android:text="Choose your base currency"
            android:textColor="@color/White"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/baseCurrencyRadioGroup" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    <RadioGroup
            android:id="@+id/baseCurrencyRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:checkedButton="@id/tryRb"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/selectText">

        <RadioButton
                android:id="@+id/tryRb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/round_button"
                android:button="@null"
                android:text="@string/currency_try"
                android:textSize="24sp"/>

        <RadioButton
                android:id="@+id/eurRb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/round_button_transparent"
                android:button="@null"
                android:text="@string/currency_eur"
                android:textSize="24sp"/>

        <RadioButton
                android:id="@+id/usdRb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/round_button_transparent"
                android:button="@null"
                android:text="@string/currency_usd"
                android:textSize="24sp"/>

        <RadioButton
                android:id="@+id/gbpRb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/round_button_transparent"
                android:button="@null"
                android:text="@string/currency_gbp"
                android:textSize="24sp"/>
    </RadioGroup>

    <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/baseCurrencyRadioGroup"
            android:id="@+id/rwCurrencies">


    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>