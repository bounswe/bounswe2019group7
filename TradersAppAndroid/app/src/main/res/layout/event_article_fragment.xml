<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/eaImage"
            android:layout_width="130dp"
            android:layout_height="250dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/articleAuthorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Author: "
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/eaImage"
            app:layout_constraintRight_toRightOf="@id/eaImage"
            app:layout_constraintTop_toBottomOf="@id/eaImage"/>

    <RatingBar
            android:id="@+id/articleRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:isIndicator="true"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:transformPivotX="0dp"
            app:layout_constraintTop_toBottomOf="@id/articleAuthorName"/>

    <TextView
            android:id="@+id/eaTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="18dp"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/eaImage"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/eaBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="32dp"
            android:ellipsize="end"
            android:maxLines="15"
            android:text="Event or article preview"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/eaImage"
            app:layout_constraintTop_toBottomOf="@+id/eaTitle"/>

</android.support.constraint.ConstraintLayout>